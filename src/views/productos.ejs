<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Productos</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- CSS personalizado -->
    <link rel="stylesheet" href="/css/producto.css">
</head>

<body>

<%- include("partials/headerC", { titulo: "Gestión de Productos" }) %>

<h2 class="text-center mb-4">Gestión de Productos</h2>

<!-- Botón agregar -->
<div class="text-end mb-3">
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalAgregar">
        Nuevo Producto
    </button>
</div>

<div class="table-responsive">
<table class="table table-bordered table-hover text-center">
    <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Imagen</th>
            <th>Stock</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        <% data.forEach(producto => { %>
        <tr>
            <td><%= producto.postre_id %></td>
            <td><%= producto.nombre_postre %></td>
            <td><%= producto.nombre_tipo %></td>

            <td>
                <% if (producto.ruta_imagen) { %>
                    <img src="/imagenes/<%= producto.ruta_imagen %>" class="img-tabla">
                <% } else { %>
                    <span class="text-muted">Sin imagen</span>
                <% } %>
            </td>

            <td><%= producto.stock %></td>
            <td><%= producto.descripcion %></td>

            <td>
                <!-- Botón EDITAR -->
                <button class="btn btn-warning btn-sm"
                        data-bs-toggle="modal"
                        data-bs-target="#modalEditar"
                        data-id="<%= producto.postre_id %>"
                        data-nombre="<%= producto.nombre_postre %>"
                        data-tipo="<%= producto.tipo_id %>"
                        data-imagen="<%= producto.ruta_imagen %>"
                        data-stock="<%= producto.stock %>"
                        data-descripcion="<%= producto.descripcion %>">
                    Editar
                </button>

                <!-- Botón ELIMINAR -->
                <form action="/productos/eliminar" method="POST" style="display:inline;">
                    <input type="hidden" name="postre_id" value="<%= producto.postre_id %>">
                    <button class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar producto?')">
                        Eliminar
                    </button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
</div>

<!-- MODAL AGREGAR -->
<div class="modal fade" id="modalAgregar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <form action="/productos/guardar" method="POST">
            <div class="modal-header">
                <h5 class="modal-title">Agregar Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="text" name="nombre_postre" class="form-control mb-2" placeholder="Nombre del postre" required>

                <select name="tipo_id" class="form-control mb-2" required>
                    <option value="">Seleccione categoría</option>
                    <% categorias.forEach(c => { %>
                        <option value="<%= c.tipo_id %>"><%= c.nombre_tipo %></option>
                    <% }) %>
                </select>

                <input type="text" name="ruta_imagen" class="form-control mb-2" placeholder="Nombre de archivo de imagen">

                <input type="number" name="stock" class="form-control mb-2" placeholder="Cantidad" required>

                <textarea name="descripcion" class="form-control mb-2" placeholder="Descripción"></textarea>
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary">Guardar</button>
            </div>
            </form>

        </div>
    </div>
</div>

<!-- MODAL EDITAR -->
<div class="modal fade" id="modalEditar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <form action="/productos/actualizar" method="POST">
            <div class="modal-header">
                <h5 class="modal-title">Editar Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <input type="hidden" name="postre_id" id="editId">

                <input type="text" name="nombre_postre" id="editNombre" class="form-control mb-2" required>

                <select name="tipo_id" id="editTipo" class="form-control mb-2" required>
                    <% categorias.forEach(c => { %>
                        <option value="<%= c.tipo_id %>"><%= c.nombre_tipo %></option>
                    <% }) %>
                </select>

                <input type="text" name="ruta_imagen" id="editImagen" class="form-control mb-2">

                <input type="number" name="stock" id="editStock" class="form-control mb-2" required>

                <textarea name="descripcion" id="editDescripcion" class="form-control mb-2"></textarea>

            </div>

            <div class="modal-footer">
                <button class="btn btn-warning">Actualizar</button>
            </div>
            </form>

        </div>
    </div>
</div>

<script>
const modalEditar = document.getElementById('modalEditar');

modalEditar.addEventListener('show.bs.modal', event => {
    const b = event.relatedTarget;

    document.getElementById('editId').value = b.getAttribute('data-id');
    document.getElementById('editNombre').value = b.getAttribute('data-nombre');
    document.getElementById('editTipo').value = b.getAttribute('data-tipo');
    document.getElementById('editImagen').value = b.getAttribute('data-imagen');
    document.getElementById('editStock').value = b.getAttribute('data-stock');
    document.getElementById('editDescripcion').value = b.getAttribute('data-descripcion');
});
</script>

<%- include("partials/footer") %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
