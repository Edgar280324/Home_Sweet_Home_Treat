<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categorías</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- CSS personalizado -->
    <link rel="stylesheet" href="/css/categoria.css">
</head>

<body>

<%- include("partials/headerC", { titulo: "Gestión de Categorías" }) %>

<h2 class="text-center mb-4">Gestión de Categorías</h2>

<!-- Botón agregar -->
<div class="text-end mb-3">
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalAgregar">
        Nueva Categoría
    </button>
</div>

<!-- Tabla categorías -->
<div class="table-responsive">
<table class="table table-bordered table-hover text-center">
    <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Categoría</th>
            <th>Imagen</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        <% data.forEach(categoria => { %>
        <tr>
            <td><%= categoria.tipo_id %></td>

            <td>
                <a href="/productos" class="link-categoria">
                    <%= categoria.categoria %>
                </a>
            </td>

            <td>
                <% if (categoria.imagen) { %>
                    <img src="/imagenes/<%= categoria.imagen %>" class="img-tabla">
                <% } else { %>
                    <span class="text-muted">Sin imagen</span>
                <% } %>
            </td>

            <td><%= categoria.descripcion %></td>

            <!-- ACCIONES -->
            <td>
                <% if (categoria.tipo_id > 3) { %>

                    <!-- Botón EDITAR -->
                    <button class="btn btn-warning btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#modalEditar"
                            data-id="<%= categoria.tipo_id %>"
                            data-nombre="<%= categoria.categoria %>"
                            data-imagen="<%= categoria.imagen %>"
                            data-descripcion="<%= categoria.descripcion %>">
                        Editar
                    </button>

                    <!-- Botón ELIMINAR -->
                    <form action="/categorias/eliminar" method="POST" style="display:inline;">
                        <input type="hidden" name="tipo_id" value="<%= categoria.tipo_id %>">
                        <button class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar categoría?')">
                            Eliminar
                        </button>
                    </form>

                <% } else { %>

                    <!-- Categoría protegida -->
                    <span class="text-muted">Protegida</span>

                <% } %>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
</div>

<!-- MODAL AGREGAR -->
<div class="modal fade" id="modalAgregar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <form action="/categorias/guardar" method="POST">
            <div class="modal-header">
                <h5 class="modal-title">Agregar Categoría</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="text" name="categoria" class="form-control mb-2" placeholder="Nombre de la categoría" required>
                <input type="text" name="imagen" class="form-control mb-2" placeholder="Nombre de archivo de imagen">
                <textarea name="descripcion" class="form-control mb-2" placeholder="Descripción"></textarea>
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary">Guardar</button>
            </div>
            </form>

        </div>
    </div>
</div>

<!-- MODAL EDITAR -->
<div class="modal fade" id="modalEditar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <form action="/categorias/actualizar" method="POST">
            <div class="modal-header">
                <h5 class="modal-title">Editar Categoría</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" name="tipo_id" id="editId">

                <input type="text" name="categoria" id="editNombre" class="form-control mb-2" required>
                <input type="text" name="imagen" id="editImagen" class="form-control mb-2">
                <textarea name="descripcion" id="editDescripcion" class="form-control mb-2"></textarea>
            </div>

            <div class="modal-footer">
                <button class="btn btn-warning">Actualizar</button>
            </div>
            </form>

        </div>
    </div>
</div>

<!-- Script para rellenar el modal editar -->
<script>
const modalEditar = document.getElementById('modalEditar');
modalEditar.addEventListener('show.bs.modal', event => {
    const button = event.relatedTarget;

    document.getElementById('editId').value = button.getAttribute('data-id');
    document.getElementById('editNombre').value = button.getAttribute('data-nombre');
    document.getElementById('editImagen').value = button.getAttribute('data-imagen');
    document.getElementById('editDescripcion').value = button.getAttribute('data-descripcion');
});
</script>

<%- include("partials/footer") %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
